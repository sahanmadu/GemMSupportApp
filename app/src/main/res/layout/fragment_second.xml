<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Second"
    android:orientation="vertical"
    android:padding="14dp"
    android:background="#dbee10">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:src="@drawable/weahter"/>

    <TextView
        android:id="@+id/ttilt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Check Weather"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textStyle="italic"
        android:text="You can check your current location weather result and also search any city name as you wish"
        android:textColor="#fff"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Back"
            android:layout_gravity="bottom|start"
            android:gravity="bottom|start"
            android:clickable="true"
            android:focusable="true"

            />

        <TextView
            android:id="@+id/txtNext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Next"
            android:layout_gravity="bottom|end"
            android:gravity="bottom|end"
            android:clickable="true"
            android:focusable="true"

            />
    </LinearLayout>

</LinearLayout>